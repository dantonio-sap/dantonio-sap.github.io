{
    "xsappname": "btp-ai-best-practices-auth",
    "tenant-mode": "dedicated",
    "scopes": [
        {
            "name": "uaa.user",
            "description": "end user access"
        },
        {
            "name": "$XSAPPNAME.viewer",
            "description": "read only access to services"
        },
        {
            "name": "$XSAPPNAME.admin",
            "description": "full access to services"
        }
    ],
    "role-templates": [
        {
            "name": "BestPracticesPage_User",
            "description": "Best Practices Page User",
            "scope-references": [
                "uaa.user"
            ],
            "attribute-references": [
                {
                    "name": "type"
                },
                {
                    "name": "company"
                },
                {
                    "name": "sapBpidOrg"
                },
                {
                    "name": "valid"
                }
            ]
        },
        {
            "name": "BestPracticesPage_Viewer",
            "description": "Best Practices Page Viewer",
            "scope-references": [
                "$XSAPPNAME.viewer"
            ]
        },
        {
            "name": "BestPracticesPage_Admin",
            "description": "Best Practices Page Admin",
            "scope-references": [
                "$XSAPPNAME.viewer",
                "$XSAPPNAME.admin"
            ]
        }
    ],
    "oauth2-configuration": {
        "redirect-uris": [
            "http://localhost:*/**",
            "https://*.hana.ondemand.com/**",
            "https://*.applicationstudio.cloud.sap/**",
            "https://*.github.io/**"
        ]
    },
    "attributes": [
        {
            "name": "type",
            "description": "user type",
            "valueType": "s",
            "valueRequired": false
        },
        {
            "name": "company",
            "description": "company",
            "valueType": "s",
            "valueRequired": false
        },
        {
            "name": "sapBpidOrg",
            "description": "customer id",
            "valueType": "s",
            "valueRequired": false
        },
        {
            "name": "valid",
            "description": "is valid user",
            "valueType": "s",
            "valueRequired": false
        }
    ]
}